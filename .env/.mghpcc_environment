#!/bin/bash

# Source Nipype, FSL, Freesurfer
export SOFTWARE=/nobackup1/satra/software
FSLDIR=$SOFTWARE/fsl
. ${FSLDIR}/etc/fslconf/fsl.sh
PATH=${FSLDIR}/bin:${PATH}
export FSLDIR PATH
#source /software/common/bin/fss 5.3.0 > /dev/null

# add PATHs
export ANTSPATH=$SOFTWARE//ANTS/versions/130823
export DTIPrepPATH=$SOFTWARE/DTIPrep/130630
export AFNIPATH=/usr/lib/afni/bin
export PATH=$AFNIPATH:$DTIPrepPATH:$ANTSPATH:$PATH

export PATH=$SOFTWARE/anaconda/bin:$PATH
source activate devpype

# Freesurfer
export SUBJECTS_DIR=/mindhive/xnat/surfaces/sad

# Multithreading
export MKL_NUM_THREADS=4
export OMP_NUM_THREADS=4

# Project name for prompt
export project_name="MGHPCC"
#module add matlab

module add slurm
module add cuda55

